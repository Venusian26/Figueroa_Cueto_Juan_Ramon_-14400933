        android:ems="10"
        android:hint="Fecha de fin:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/vigencia_med_actu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vigencia:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/paciente_med_actu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Paciente:"
        android:inputType="textPersonName" />

